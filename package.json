{
  "name": "git-switcher",
  "version": "0.0.1",
  "description": "CLI tool that simplifies multiple Git accounts in a system",
  "main": "dist/index.js",
  "bin": {
    "git-switcher": "dist/bin/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "dev": "npm run build && node dist/bin/cli.js",
    "link": "npm link",
    "unlink": "npm unlink -g git-switcher",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && npm run build && npm run test:run"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^25.0.2",
    "@vitest/ui": "^4.0.15",
    "typescript": "^5.9.3",
    "ultracite": "^6.4.1",
    "vitest": "^4.0.15"
  }
}
